<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QrActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#8EB4D3"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ImageView
        android:id="@+id/qr"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:background="@color/white"
        android:src="@drawable/qr_img"
        tools:ignore="ContentDescription"
        android:gravity="center"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/layout_line"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_person"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:background="@color/white"
            android:src="@drawable/person"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_manage"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_manage"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:background="@drawable/speech"
            android:fontFamily="@font/lgsmhasb"
            android:gravity="center"
            android:paddingTop="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_person"
            app:layout_constraintVertical_bias="0.501"
            tools:ignore="RtlSymmetry"
            tools:text="정해서님의 현재 포인트는\n100포인트 입니다"
            android:textAlignment="center"/>

        <View
            android:id="@+id/borderline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_line"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/point"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/btn_img"
        android:fontFamily="@font/lgsmhasb"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        tools:ignore="RtlSymmetry"
        tools:text="포인트 사용하기"
        android:layout_marginEnd="0dp"/>


</LinearLayout>